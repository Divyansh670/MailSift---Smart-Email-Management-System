# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mailsift
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/mailsift

# Google OAuth2 Configuration
# Manual Step Required: Get these from Google Cloud Console
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Gmail API and Google+ API
# 4. Create OAuth2 credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# ML Model API Configuration
ML_API_URL=http://localhost:5001
ML_API_ENABLED=true

# Email Configuration (for sending reminders)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Frontend URL
FRONTEND_URL=http://localhost:3000